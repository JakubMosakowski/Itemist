<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kuba.itemist"
    android:versionCode="1"
    android:versionName="0.0.1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher5"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher5"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.kuba.itemist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kuba.itemist.NameNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.kuba.itemist.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.MainActivity" />
        </activity>
        <activity
            android:name="com.example.kuba.itemist.AddNoteActivity"
            android:parentActivityName="com.example.kuba.itemist.NameNoteActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.MainActivity" />
        </activity>
        <activity
            android:name="com.example.kuba.itemist.ChooseNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.kuba.itemist.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.MainActivity" />
        </activity>
        <activity android:name="com.example.kuba.itemist.NoteActivity"></activity>
    </application>

</manifest>