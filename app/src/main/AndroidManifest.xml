<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kuba.itemist"
   >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher5"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher5"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".NameNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ChooseNoteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.ChooseNoteActivity" />

        </activity>

        <activity
            android:name=".AddNoteActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize"
            android:parentActivityName=".ChooseNoteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.ChooseNoteActivity" />
        </activity>

        <activity
            android:name=".ChooseNoteActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NoteActivity"
            android:parentActivityName=".ChooseNoteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.ChooseNoteActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
        android:parentActivityName=".ChooseNoteActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.kuba.itemist.ChooseNoteActivity" />
        </activity>

        <activity android:name=".AboutActivity"
            android:parentActivityName=".ChooseNoteActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kuba.itemist.ChooseNoteActivity" />
        </activity>
    </application>

</manifest>